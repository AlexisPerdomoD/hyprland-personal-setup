// -*- mode: jsonc -*-
{
    "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 16, // Waybar height (to be removed for auto height)
    // "width": 2400, // Waybar width
    //"margin": 4, // Gaps between modules (4px)
    "margin-bottom": 0,
    "margin-left": 4,
    "margin-right": 4,
    "margin-top": 4,
    "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        "hyprland/workspaces",
        "hyprland/window",
        "keyboard-state"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "bluetooth",
        "pulseaudio",
        "network",
        "cpu",
        "custom/cpu_temp",
        "custom/gpu_temp",
        "memory",
        "custom/power"
    ],
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "warp-on-scroll": false,
        //"format": "<sub>{icon}</sub>",
        "format": "<span>{id} <span style=\"italic\">{icon}</span></span>", //{name}: {icon}",
        "format-icons": {
            //"1": "ÔÑ†",
            //"2": "Ôâ®",
            //"3": "ÔÑ°",
            //"4": "ÔÜº", "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞",
            //"5": "ÔÑ°", // "ÔÅµ", "Ôãí"
            "urgent": "ÔÅ™",
            "focused": "ÔÜí",
            "default": "ÔÑë",
            "active": "ÔÑë"
        },
        "window-rewrite": {
            "title<.*youtube.*>": "ÔÖ™", // Windows whose titles contain "youtube"
            "class<firefox>": "Ôâ©", // Windows whose classes are "firefox"
            "class<firefox> title<.*github.*>": "ÔÑì", // Windows whose class is "firefox" and title contains "github". Note that "class" always comes first.
            "foot": "Óûï", // Windows that contain "foot" in either class or title. For optimization reasons, it will only match against a title if at least one other window explicitly matches against a title.
            "code": "Û∞®û"
        },
        "persistent-workspaces": {
            "*": 3
        }
    },
    "hyprland/window": {
        "format": "<span  size=\"small\">{}</span> "
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    "hyprland/mode": {
        "format": "<small style=\"italic\">{}</small>"
    },
    "clock": {
        "format": "{:%B %d %Y   -   %R}",
        "format-alt": "{:%B %d %Y   -   %R}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode"
        }
    },
    "cpu": {
        "format": "CPU {usage}% ",
        "tooltip": true
    },
    "memory": {
        "format": "{used}GB RAM "
    },
